{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build/es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node"
  },
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "docs",
    "examples",
    "gh-pages",
    "tools"
  ],
  "compileOnSave": false
}
